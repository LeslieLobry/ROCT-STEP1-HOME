datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Historique {
  id    Int     @id @default(autoincrement())
  title String
  intro String?
  body  String   // HTML complet
}
model Palmares {
  id          Int      @id @default(autoincrement())
  saison      String   // ex : "1962-1963", "2023-2024"
  description String   // la ligne compl√®te
  ordre       Int      @default(0) // pour trier dans une saison
  createdAt   DateTime @default(now())
}
